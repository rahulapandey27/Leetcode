class Solution {
    public String reverseOnlyLetters(String s) {
        char[] a = s.toCharArray();
        int i = 0, j = a.length - 1;

        while (i < j) {
            if (!Character.isLetter(a[i])) i++;
            else if (!Character.isLetter(a[j])) j--;
            else {
                char tmp = a[i];
                a[i] = a[j];
                a[j] = tmp;
                i++; j--;
            }
        }
        return new String(a);
    }
}
